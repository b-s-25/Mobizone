@{
    ViewData["Title"] = "Checkout";
    var userAddress = ViewData["UserAddress"] as IEnumerable<DomainLayer.Address>;
}
<div class="card">
    <div class="address"><p class="card-title">Delivery Address</p></div>
    @if (userAddress == null)
    {
        <p> Please add address</p>
    }
    else
    {
        @foreach (var address in userAddress)
        {
            <div id="address">
                <div class="address">
                    <input class="form-check-input" type="checkbox" value="@address" />
                    <label class="form-check-label" style="margin-left: 27px;">@address.name <br />@address.address<br />@address.district</label>
                </div>
                <div class="row" style="padding: 2px; margin-left: -37px;">
                    <div class="col"><a href="/checkout/address" class="btn btn-primary" style="margin-left: 25px;">Add New Address</a></div>
                </div>
            </div>
        }
    }
</div>

