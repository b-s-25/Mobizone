@model DomainLayer.ResetPassword
@{ 
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/User/WithoutNav.cshtml";
}

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <div class="container" style="margin-top: 10%; margin-top: 100px;">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 alert alert-info">
                <div>
                    <h3 class="text-center">Reset Password</h3>
                    <form id="ResetPasswordForm" method="post" action="/user/ResetPassword">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input class="form-control" type="password" asp-for="newPassword" id="logPassword" placeholder="New Password" />
                                <span asp-validation-for="newPassword" class="text-danger"></span>
                            </div>
                        </div>                      
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input class="form-control" type="password" asp-for="confirmPassword" id="logPassword" placeholder="Confirm Password" />
                                <span asp-validation-for="confirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input class="btn btn-info form-control" style="background-color: #0a8199" type="submit" value="Submit" />
                            </div>
                        </div>
                        <input asp-for="user.email" type="hidden" />
                    </form>
                    <div class="col">
                        <a style="cursor:pointer; color:unset;" asp-action="Login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
