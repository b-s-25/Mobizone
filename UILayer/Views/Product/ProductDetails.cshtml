@model IEnumerable<DomainLayer.Product.ProductsModel>

@{

    var products = ViewData["Products"] as DomainLayer.Product.ProductsModel;
    ViewData["Title"] = "Products";
}

<style>
    .container button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 160%;
        font-size: 18px;
    }

        .container button:hover {
            opacity: 0.7;
        }
</style>

<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="row">
                <div class="col-12">
                    <img src="~/images/ProductImages/@products.image" />
                </div>
                <div>
                    <p><button class="btn btn-primary" style="">Buy Now</button></p>
                    <p><button class="btn btn-primary" style="">Add to Cart</button></p>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="products">
                <p class="text" style="font-size:45px"> @products.productName</p>
                <div class="row">
                    <div class="col-6">
                        <p class="text">Price</p>
                        <p class="text">Ram</p>
                        <p class="text">Storage</p>
                        <p class="text">Sim Type</p>
                    </div>
                    <div class="col-4">                     
                                <p class="text">@products.productPrice</p>
                                <p class="text">@products.specification.productRam</p>
                                <p class="text">@products.specification.productStorage</p>
                                <p class="text">@products.specification.productSim</p>
                            </div>
                       
                    </div>
                </div>
                
                
        
    </div>
</div>



