@model IEnumerable<DomainLayer.Products>

@{
    ViewData["Title"] = "Index";

}

<head>
    <style>
        #myTable_wrapper {
            background-color: lightcyan;
            width: 100%;
            margin-top: -4px;
        }

        .head {
            background-color: lightskyblue;
            width: 100%;
            height: 85px;
            padding: 10px;
            margin-bottom: 5px;
        }

        p {
            color: : black;
        }
    </style>
</head>
<div class="head">
    <h1>Products</h1>

    <p>
        @Html.ActionLink("Add New", "Create")
    </p>

</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />


<table id="myTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Price</th>
            <th>Image</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Price</th>
            <th>Image</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>
<!------------DataTable----------->

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    @* Normal*@
    <script src="//cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>

    @* Bootstrap*@
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $.ajax({
            url: '/Product/GetList',
            type: 'get',
            datatype: 'json',
            success: function (data) {
                status = data;
                console.log(status);
                $('#myTable').dataTable({
                    data: data,
                    columns: [
                       @* { "render": function (data, full) { return full.productType;} },*@
                        @*{ "data": "productType" },*@
                        { "data": "productName" },
                        { "data": "productModel" },
                        { "data": "productPrice" },
                        {
                            "data": "image"@*,
                            "render": function (data, type, row, meta) {
                                return '<img src="~/Images' + data + '"height="16" width="16"/>';*@

                            @*"render": function (data, type, JsonResultRow, meta) {
                                return '<img src="/Images/' + JsonResultRow.ImageAddress + '">';*@
                        },
                        { "data": "description" },
                        {
                            "render": function (id, type, row, meta) {
                                return '<a href="Product/Edit" onclick="Edit(' + id + ')" asp-action="Edit";><i class="bi bi-pencil-fill"></i></a>' +
                                    '<a href="Product/Delete" onclick="Delete(' + id + ')" asp-action="Edit";<i class="bi bi-trash3-fill" style="margin-left: 2em"></i>';
                            }
                        }
                    ]
                })
            },
            error: function () {
                console.log("error")
            }
        })
        
    </script>
<script>
    function Edit() {

    }
</script>
}