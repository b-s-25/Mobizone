@model DomainLayer.Login
@{
    ViewData["Title"] = "Login";
}
@{
    @*var loginUrl = ViewData["LoginUrl"] as string;*@
    var error = TempData["error"] as string;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<div class="container" style="margin-top: 10%; margin-top:100px;">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 alert alert-info">
            <h3 class="text-center">Login</h3>
            <form id="LoginForm" method="post" asp-action="login">

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input class="form-control" type="email" asp-for="username" id="logEmail" placeholder="Email" />
                        <span asp-validation-for="username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input class="form-control" type="password" asp-for="password" id="logPassword" placeholder="Password" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-info form-control" style="background-color: #0a8199" type="submit"><i class="glyphicon glyphicon-log-in"></i> Login </button>
                </div>
            </form>
            <div class="form-group">
                <a style="float:left">Forget Password?</a>
                <a style="float:right;cursor:pointer;color:unset;" onclick="SignUp()" asp-action="UserRegister"> Sign Up </a>
            </div>

        </div>
        <div class="form-group">
            @if (!string.IsNullOrEmpty(error))
            {
                <span class="alert-danger" style="padding: 20px; margin-left: 460px;">@error</span>
            }
        </div>
    </div>
</div>
<script>
    function SignUp() {

    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

